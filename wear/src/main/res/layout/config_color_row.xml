<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingEnd="@dimen/config_activity_padding"
    android:paddingStart="@dimen/config_activity_padding"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/config_color"
        style="@style/Widget.ActionPage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/color_selection"
        android:contentDescription="@string/slate_second_hand_color"
        android:elevation="2dp"
        android:foreground="@drawable/ic_palette_white_40dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/config_color"
        android:orientation="vertical">


        <TextView
            android:id="@+id/config_title"
            style="@style/Widget.WearDiag.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:ellipsize="end"
            android:gravity="bottom|start"
            android:maxLines="2"
            tools:text="Config switch option" />

        <TextView
            android:id="@+id/config_summary"
            style="@style/Widget.WearDiag.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:ellipsize="end"
            android:gravity="top|start"
            android:maxLines="1"
            android:textColor="@color/secondary_text_light"
            android:textSize="@dimen/summary_text_size" />

    </LinearLayout>

</RelativeLayout>

